---
import ImageMod from "@/components/ImageMod.astro";
import PrimaryButton from "@/components/PrimaryButton.astro";
import Base from "@/layouts/Base.astro";
import CallToAction from "@/partials/CallToAction.astro";
---

<Base title="Page Not Found">
  <section class="py-5 lg:py-20 text-center mb-16">
    <div class="container">
      <div class="flex flex-col items-center lg:col-8 mx-auto gap-5">
        <ImageMod src="/images/404.png" class="max-w-[400px] w-full" width={400} height={400} alt="404 Image" />
        <div>
          <div class="badge badge-gradient text-lg mb-4">Error 404</div>
          <h1 class="text-h3 md:text-h1 mb-4">Oops! Not Found.</h1>
          <p class="lg:col-8 mx-auto mb-10">
            We apologize, but it seems like there's been an error. Our team working diligently to resolve the issue.
          </p>
          <PrimaryButton as="a" link="/" label="Back to Home" />
        </div>
      </div>
    </div>
  </section>
  <CallToAction />
</Base>
