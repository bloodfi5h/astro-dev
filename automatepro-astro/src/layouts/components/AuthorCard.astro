---
import { plainify } from "@/lib/utils/textConverter";
import ImageMod from "./ImageMod.astro";
import Social from "./Social.astro";

const { data, ...props } = Astro.props;
const { title, image, social } = data.data;
---

<div
  class="rounded bg-theme-light border hover:border-border transition-all duration-500 border-transparent p-8 text-center u-underline"
  {...props}
>
  {
    image && (
      <ImageMod class="mx-auto mb-6 rounded-full" src={image} alt={title} width={120} height={120} format="webp" />
    )
  }
  <h4 class="mb-3">
    <a href={`/authors/${data.slug}`} class="">
      <span class="s-underline">{title}</span>
    </a>
  </h4>
  <p class="mb-4">
    {plainify(data.body?.slice(0, 100))}
  </p>
  <Social source={social} className="social-icons" />
</div>
